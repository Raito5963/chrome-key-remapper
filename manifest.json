{
  "manifest_version": 3,
  "name": "大西 IME",
  "version": "2.0",
  "description": "QWERTYから大西配列に変換するIME",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
