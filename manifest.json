{
  "name": "Qwerty→Dvorak IME",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Qwerty 配列のキー入力を Dvorak 配列にリマップする IME 拡張機能。",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-ime": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Qwerty ↔︎ Dvorak 切り替え"
    }
  },
  "options_page": "options.html"
}
