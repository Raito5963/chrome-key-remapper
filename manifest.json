{
  "manifest_version": 3,
  "name": "Qwerty to Dvorak Converter",
  "version": "1.0",
  "description": "Qwerty配列をDvorak配列にリマップする拡張機能",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
